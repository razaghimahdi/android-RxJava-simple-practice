<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayout_goal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/grey_5"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:padding="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tvGoallistName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvGoalListAchieveDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvGoallistName"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/button_action_plan"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5dp"
        android:adjustViewBounds="true"
        android:padding="3dp"
        android:scaleType="fitCenter"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_action_list" />


    <androidx.cardview.widget.CardView
        android:visibility="gone"
        android:id="@+id/tasklistbuttons"
        android:layout_centerInParent="true"
        app:cardCornerRadius="5dp"
        android:layout_width="220dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="8dp">

            <Space
                android:layout_width="16dp"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/imageButtonClose"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"

                app:srcCompat="@drawable/ic_close" />


            <Space
                android:layout_width="16dp"
                android:layout_height="match_parent" />


            <ImageView
                android:id="@+id/imageButtonDelete"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"

                app:srcCompat="@drawable/ic_trash_row" />

            <Space
                android:layout_width="16dp"
                android:layout_height="match_parent" />


            <ImageView
                android:id="@+id/imageButtonEdit"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"

                app:srcCompat="@drawable/ic_action_edit_row" />

            <Space
                android:layout_width="16dp"
                android:layout_height="match_parent" />


            <ImageView
                android:id="@+id/imageButtonMarkAsDone"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"

                app:srcCompat="@drawable/ic_action_done_circle" />

            <Space
                android:layout_width="16dp"
                android:layout_height="match_parent" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>